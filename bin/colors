#!/usr/bin/env bash -eu

for color in \
    {1..8} \
    {39..37} {90..97} \
    {49..47} {100..107};
do
  echo -e \
          "\e[${color}mHello Colors\e[0m" \
          ' | ' \
          'Hello Colors' \
          ' | ' \
          '\\e['"${color}"'mHello Colors' \
          && :
done

echo
echo ============= 256 Colors ===============
echo

for color in {1..256}; do
  echo -e \
          "\e[38;5;${color}mHello Colors\e[0m" \
          ' | ' \
          'Hello Colors' \
          ' | ' \
          '\\e[38;5;'"${color}"'mHello Colors' \
          && :
done

echo
echo ============= 256 Background Colors ===============
echo

for color in {1..256}; do
  echo -e \
          "\e[48;5;${color}mHello Colors\e[0m" \
          ' | ' \
          'Hello Colors' \
          ' | ' \
          '\\e[48;5;'"${color}"'mHello Colors' \
          && :
done

# Ref
# https://misc.flogisoft.com/bash/tip_colors_and_formatting

