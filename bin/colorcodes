#!/usr/bin/env bash -eu

readonly text=${1:-"Hello Colors"}

readonly help=$(cat <<HELP
usage colorcodes [options] [<show_text>]
  options:
    --help this
HELP
)

for arg in $@; do
  if [ "$arg" == '--help' ]; then echo "$help" && exit; fi
done

display_color() {
  local display_text="$1"
  local code="$2"

  echo -e \
          "\e[${code}m"${display_text}"\e[0m" \
          ' | ' \
          '\\e['"${code}"'m'"${display_text}"'\\e[0m' \
          && :
}

for color in \
    {1..8} \
    {39..39} {30..37} {90..97} \
    {49..47} {100..107};
do
  display_color "$text" "$color"
done

echo ============= 256 Colors ===============

for color in {1..256}; do
  display_color "$text" "38;5;$color"
done

echo ============= 256 Background Colors ===============

for color in {1..256}; do
  display_color "$text" "48;5;$color"
done

# Ref
# https://misc.flogisoft.com/bash/tip_colors_and_formatting

