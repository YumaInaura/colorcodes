#!/usr/bin/env bash -eu

readonly text=${1:-"Hello Colors"}

for color in \
    {1..8} \
    {39..37} {90..97} \
    {49..47} {100..107};
do
  echo -e \
          "\e[${color}m"$text"\e[0m" \
          ' | ' \
          '\\e['"${color}"'m'"$text"'\\e[0m' \
          && :
done

echo ============= 256 Colors ===============

for color in {1..256}; do
  echo -e \
          "\e[38;5;${color}m${text}\e[0m" \
          ' | ' \
          '\\e[38;5;'"${color}"'m'"$text"'\\e[0m' \
          && :
done

echo ============= 256 Background Colors ===============

for color in {1..256}; do
  echo -e \
          "\e[48;5;${color}m${text}\e[0m" \
          ' | ' \
          '\\e[48;5;'"${color}"'m'"$text"'\\e[0m' \
          && :
done

# Ref
# https://misc.flogisoft.com/bash/tip_colors_and_formatting

